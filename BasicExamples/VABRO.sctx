scchart VABRO {
  input signal A,B, R
  output signal int O 
  
  initial state ABO {
    
    int count =0 
    
    initial state WaitAB {
      region {
        initial state wA
        if A do count ++ go to dA 
  
        final state dA
      }
      
      region {
        initial state wB
        if !B do count ++; count -= 2 go to dB
  
        final state dB
      }
    }
    do O(count) join to done

    final state done
  }
  if R abort to ABO 
}
  